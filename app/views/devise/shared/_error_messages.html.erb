<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-0 m-3 shadow" role="alert">
    <strong>
      <%= t("errors.messages.not_saved",
            count: resource.errors.uniq.count,
            resource: resource.class.model_name.human.downcase) %>
    </strong>
    <ul class="mb-0 ps-3">
      <% resource.errors.full_messages.uniq.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
