<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h5 class="alert-heading">
        <%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:
      </h5>
      <ul class="mb-0">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
    <div class="form-text">Title must be between 5 and 30 characters.</div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 5 %>
    <div class="form-text">Optional description for your task.</div>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status,
                    Task.statuses.keys.map { |s| [s.humanize, s] },
                    {},
                    class: 'form-select' %>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', tasks_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
