<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card shadow-lg border-0 p-4">
    <h3 class="text-center fw-bold mb-4"><%= t("devise.registrations.new.sign_up") %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= render partial: "devise/shared/field",
                 collection: registration_new_data, as: :data,
                 locals: { form: f } %>

      <div class="d-grid gap-3">
        <%= f.submit t("devise.registrations.new.sign_up"), class: "btn btn-success btn-lg" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
